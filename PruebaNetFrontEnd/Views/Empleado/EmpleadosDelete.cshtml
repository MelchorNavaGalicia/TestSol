@model PruebaNetFrontEnd.Models.Empleado

<form asp-action="EmpleadosDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-center">Eliminar Empleado</h1>
        <input hidden asp-for="Id">
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Nombre del empleado</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Nombre" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Apellido Paterno</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Apellido_Paterno" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Apellido Materno</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Apellido_Materno" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Area</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Area.NombreArea" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Fecha de Nacimiento</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Fecha_Nacimiento" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Sueldo</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Sueldo" disabled class="form-control" />
            </div>

            <div class="col-5">
                <a asp-action="EmpleadosIndex" class="btn btn-primary form-control d-inline-block mr-2">Regresar</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Borrar" class="btn btn-danger form-control d-inline-block" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>