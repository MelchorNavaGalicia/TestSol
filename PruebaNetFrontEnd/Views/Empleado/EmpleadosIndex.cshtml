﻿
@model IEnumerable<Empleado>


<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Menu de Empleados</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="EmpleadosCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Agregar Empleado</a>

			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Nombre
					</th>
					<th>
						Apellido Paterno
					</th>
					<th>
						Apellido Materno
					</th>
					<th>
						Area
					</th>
					<th>
						Fecha De Nacimiento
					</th>
					<th>
						Sueldo
					</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@item.Nombre
						</td>
						<td>
							@item.Apellido_Paterno
						</td>
						<td>
							@item.Apellido_Materno
						</td>
						<td>
							@item.Area.NombreArea
						</td>
						<td>
							@item.Fecha_Nacimiento
						</td>
						<td>
							@item.Sueldo
						</td>
						<td>
							<a class="btn btn-danger" asp-action="EmpleadosDelete" asp-route-id="@item.Id">
								<i class="bi bi-trash"></i>
							</a>

						</td>

						<td>
							<a class="btn btn-secondary" asp-action="EmpleadosEdit" asp-route-id="@item.Id">
								<i class="bi bi-file-arrow-up"></i>
							</a>

						</td>
					</tr>
				}

			</tbody>
		</table>

	</div>

</div>